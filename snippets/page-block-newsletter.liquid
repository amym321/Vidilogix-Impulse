{%- style -%}
  .newsletter-{{ block.id }} {
    background-color: {{ block.settings.color_background }};
    color: {{ block.settings.color_text }};
  }

  .newsletter-{{ block.id }} .newsletter__input::-webkit-input-placeholder { color: {{ block.settings.color_text }}; }
  .newsletter-{{ block.id }} .newsletter__input::-moz-placeholder { color: {{ block.settings.color_text }}; }
  .newsletter-{{ block.id }} .newsletter__input::-ms-input-placeholder { color: {{ block.settings.color_text }}; }
{%- endstyle -%}

<div class="newsletter-section newsletter-{{ block.id }}{% if show_divider %} newsletter-section--with-divider{% endif %}">
  <div class="page-width page-content text-center">
    {%- if block.settings.title != blank -%}
      <p class="h3">{{ block.settings.title | escape }}</p>
    {%- endif -%}
    {%- if block.settings.text != blank -%}
      <div class="rte">{{ block.settings.text }}</div>
    {%- endif -%}

    {%- render 'newsletter-form', section_id: section.id, snippet_context: 'section' -%}
    {%- if block.settings.unsubscribe_url != blank -%}
      <div class="unsubscribe-link rte"><a href="{{ block.settings.unsubscribe_url }}" target="_blank">{{ block.settings.unsubscribe_text }}</a></div>
    {%- endif -%}
  </div>
</div>
